<style>
    body {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        color: #ddd;
        font-family: sans-serif;
        background-image: linear-gradient(to right top, #495057, #444);
        color-scheme: light dark;
    }

    .main {
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 1.6rem;
        border-radius: 6px;
        width: 40rem;
        height: 50rem;
        background-color: #333;
        padding: 2.4rem;
        box-shadow: 0 2px 10px 5px rgba(0, 0, 0, 0.1);
        border: 2px solid #242424;
    }

    .addToDoForm {
        width: 100%;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    input {
        width: 100%;
    }

    .date {
        width: 12%;
        display: flex;
        justify-content: flex-end;
    }

    select {
        border: 2px solid #242424;
        border-radius: 6px;
        background-color: inherit;
        display: flex;
        height: 100%;
        width: 7%;
    }

    select:focus {
        outline: none;
        background-color: #444;
    }

    option {
        background-color: #333
    }

    ul {
        max-height: 36rem;
        overflow: auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
        list-style: none;
    }

    li {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-radius: 6px;
        padding: 1.2rem;
        height: 4rem;
        background-color: #444;
    }

    li button {
        background-color: #333;
        border: 2px solid #333;
        display: none;
        align-items: center;
        justify-content: center;
        padding: 0.4rem;
    }

    li button:hover {
        background-color: #242424;
    }

    .trash {
        fill: #ddd;
    }

    .checkbox {
        width: 1.2rem;
    }

    .todoContainer{
    }
    .todo {
        font-size: 1.4rem;
        height: 100%;
        width: 80%;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        border-right: 1px solid #ddd;
    }

    .todoDescription {
        padding-left: 1.2rem;
        width: 20%;
        font-size: 0.8rem;
        display: flex;
        flex-direction: column;
        align-content: flex-start;
    }

</style>

@model HomePageViewModel

<div class="main">
    <h2>ToDo list</h2>
    <form class="addToDoForm" method="post" asp-action="AddToDo">
        <input type="text" asp-for="AddToDoRequest.Task"/>
        <select asp-for="AddToDoRequest.CategoryId">
            @foreach (var category in Model.Categories)
            {
            <option value="@category.Id">@category.Name</option>
            }
        </select>
        <input type="date" class="date" asp-for="AddToDoRequest.DateToPerform"/>
        <button>Add</button>
    </form>
    <ul>
        @foreach (var todo in Model.ToDos)
        {
        <li class="todoContainer">
            <div class="todo">
                <input type="checkbox" class="checkbox"/>
                <span>@todo.Task</span>
            </div>
            <form method="post" asp-action="DeleteToDo">
                <input type="hidden" asp-for="DeleteToDoRequest.Id" value="@todo.Id"/>
                <button>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="trash"
                         viewBox="0 0 16 16">
                        <path
                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                        <path
                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                    </svg>
                </button>
            </form>
            <div class="todoDescription">
                <span>@todo.Category.Name</span>
                <span>@todo.DateToPerform?.ToShortDateString()</span>
            </div>
        </li>
        }
    </ul>
</div>

@section Scripts
{
    <script>
        
    </script>
}
